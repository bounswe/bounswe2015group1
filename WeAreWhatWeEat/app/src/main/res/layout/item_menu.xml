<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_menuHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_marginLow"
        android:layout_marginBottom="@dimen/item_marginLow" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/item_padding" >

            <ImageView
                android:id="@+id/menuPic_small"
                android:layout_width="@dimen/image_width_bigger"
                android:layout_height="@dimen/image_height_bigger"
                android:layout_margin="@dimen/item_margin"
                android:src="@drawable/menuicon" />

            <TextView
                android:id="@+id/itemMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>