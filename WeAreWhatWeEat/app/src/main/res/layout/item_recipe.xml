<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_marginLow"
    android:layout_marginBottom="@dimen/item_marginLow" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_paddingLow" >

        <TextView
            android:id="@+id/textView_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/item_margin"
            android:padding="@dimen/item_marginLow"
            android:visibility="gone"
            android:text="Recommended" />

        <ImageView
            android:id="@+id/recipePic_small"
            android:layout_width="@dimen/image_width_bigger"
            android:layout_height="@dimen/image_height_bigger"
            android:layout_margin="@dimen/item_margin"
            android:src="@mipmap/ic_recipe"/>

        <TextView
            android:id="@+id/itemRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/recipePic_small"
            android:layout_alignTop="@+id/recipePic_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_below="@+id/itemRecipeName"
            android:layout_toRightOf="@+id/recipePic_small"
            android:layout_alignBottom="@+id/recipePic_small"
            android:weightSum="3">

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/calories"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>